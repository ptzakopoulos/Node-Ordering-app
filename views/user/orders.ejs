<%- include('../includes/Head.ejs') %> <%-
include('../includes/navigation.ejs')%> <% let totalPrice = 0 %> <% let
overalPrice = 0 %>
<div class="orders-container">
  <div class="order-card">
    <% if(orders.length > 0) { %> <% orders.forEach((order,index) => { %>
    <p class="date">Date : <%= order.date %></p>
    <% totalPrice = 0 %> <% order.products.forEach(product => { %>
    <div class="order-info">
      <h1><%= product.product.title %></h1>
      <h4>x<%= product.quantity %></h4>
      <% totalPrice += product.quantity * product.product.price %> <%
      overalPrice += product.quantity * product.product.price %>
    </div>
    <% }) %>
    <p class="total-price">Total Price : <%= totalPrice %></p>
    <% }) } else { %>
    <h1>No order history</h1>
    <% } %>
  </div>
  <h4 class="overal-price">Overal Price : <%= overalPrice %></h4>
</div>
<%- include('../includes/End.ejs') %>
